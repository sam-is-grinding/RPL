    <!DOCTYPE html>
    <html lang="id">

    <head>
        <script src="https://unpkg.com/alpinejs" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <link rel="stylesheet" href="/styles.css">
        <title>Halaman Auth</title>
        <style>
            [x-cloak] { display: none !important; }
        </style>
    </head>

    <body>
        <div x-data="app()" x-cloak>
            <!-- Halaman Auth -->
            <div class="container">
            <% if (typeof success !=='undefined' && success) { %>
                <div>
                    <p>
                        <%= success %>
                    </p>
                </div>
            <% } %>
            <% if (typeof error !=='undefined' && error) { %>
                <div>
                    <p>
                        <%= error %>
                    </p>
                </div>
            <% } %>
            </div>
            <div class="container">
            
                <div class="auth-box">
                    <div class="tab-switcher">
                        <button class="tab-button" :class="activeTab === 'login' ? 'active' : ''"
                            @click="activeTab = 'login'">
                            Login
                        </button>
                        <button class="tab-button" :class="activeTab === 'register' ? 'active' : ''"
                            @click="activeTab = 'register'">
                            Register
                        </button>
                    </div>

                    <!-- Form Login -->
                    <form x-show="activeTab === 'login'" action="/login" method="POST">

                        <div class="input-group">
                            <label>ID Perguruan</label>
                            <input type="text" name="username" x-model="username" required>
                        </div>

                        <div class="input-group">
                            <label>Password</label>
                            <input type="password" name="password" x-model="password" required>
                        </div>

                        <button type="submit" class="button">Masuk</button>
                    </form>

                    <!-- Form Register -->
                    <form x-show="activeTab === 'register'" action="/register" method="POST">
                        <div class="input-group">
                            <label>ID Perguruan</label>
                            <input type="text" name="username" x-model="username" required>
                        </div>

                        <div class="input-group">
                            <label>Password</label>
                            <input type="password" name="password" x-model="password" required>
                        </div>

                        <button type="submit" class="button">Daftar</button>
                    </form>
                </div>
            </div>
        </div>

        <script>
            function app() {
                return {
                    activeTab: '<%= typeof activeTab !== "undefined" ? activeTab : "login" %>',
                    username: '<%= typeof username !== "undefined" ? username : "" %>',
                    password: '',
                }
            }
        </script>
    </body>
    </html>